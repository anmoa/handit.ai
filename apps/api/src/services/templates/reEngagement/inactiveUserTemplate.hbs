      }

      .subtitle {
        font-size: 16px;
        color: #666;
        margin-bottom: 30px;
        line-height: 1.5;
      }

      p {
        font-size: 15px;
        color: #00272f;
        margin: 16px 0;
        line-height: 1.6;
      }

      .cta-primary {
        display: inline-block;
        margin: 30px auto;
        padding: 16px 32px;
        background-color: #02f7aa;
        color: #00272f !important;
        text-decoration: none;
        font-weight: 600;
        font-size: 16px;
        border-radius: 8px;
        text-align: center;
      }

      .cta-secondary {
        display: inline-block;
        margin: 15px auto;
        padding: 12px 24px;
        background-color: transparent;
        color: #02f7aa !important;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        border: 2px solid #02f7aa;
        border-radius: 8px;
        text-align: center;
      }

      .stats {
        background-color: #f8fafb;
        padding: 20px;
        border-radius: 8px;
        margin: 30px 0;
        text-align: center;
      }

      .stat-item {
        display: inline-block;
        margin: 0 20px;
        text-align: center;
      }

      .stat-number {
        font-size: 24px;
        font-weight: 600;
        color: #02f7aa;
        display: block;
      }

      .stat-label {
        font-size: 12px;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .footer {
        text-align: center;
        font-size: 13px;
        color: #666;
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #eee;
      }

      .footer a {
        color: #02f7aa;
        text-decoration: none;
      }

      @media screen and (max-width: 600px) {
        .container {
          padding: 30px 20px;
        }
        .logo {
          width: 120px;
        }
        h1 {
          font-size: 20px;
        }
        .stat-item {
          display: block;
          margin: 10px 0;
        }
      }
    </style>
